<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.longtrang.vinid">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-feature android:name="android.hardware.camera.flash" />


    <application

        android:allowBackup="true"
        android:configChanges="locale|orientation"
        android:icon="@drawable/app_avatar"
        android:label="@string/app_name"
        android:roundIcon="@drawable/app_avatar"
        android:supportsRtl="true"
        android:theme="@style/Theme.VinID">
        <activity android:name="HomeActivities.CameraScanner"
            android:screenOrientation="portrait"
            android:stateNotNeeded="true"
            android:theme="@style/zxing_CaptureTheme"/>
        <activity
            android:name="HomeActivities.QRCode"
            android:exported="true" />
        <activity
            android:name="HomeActivities.Profile"
            android:exported="true" />
        <activity
            android:name="HomeActivities.Inbox"
            android:exported="true" />
        <activity
            android:name="HomeActivities.MyWallet"
            android:exported="true" />
        <activity
            android:name="HomeActivities.HomePage"
            android:exported="true" />
        <activity
            android:name="RegisterActivities.TopicService"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name="RegisterActivities.PersonalInformation"
            android:exported="true"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name="RegisterActivities.PinCode"
            android:exported="true"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysVisible|adjustResize" />
        <activity
            android:name="RegisterActivities.ConfirmOTP"
            android:exported="true"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysVisible|adjustResize" />
        <activity
            android:name="RegisterActivities.PhoneNumberRegister"
            android:exported="true"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysVisible|adjustResize" />
        <activity android:name="RegisterActivities.MainActivity">
            android:exported="true"
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>