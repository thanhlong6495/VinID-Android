<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="btn_next">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/dimen10</item>
        <item name="android:paddingBottom">@dimen/dimen10</item>
        <item name="android:textSize">@dimen/text_size22</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="backgroundTint">@color/button_next_background</item>
        <item name="android:textColor">@color/button_next</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAlignment" tools:targetApi="jelly_bean_mr1">center</item>
    </style>
    <style name="Activity_Style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/dimen10</item>
        <item name="android:layout_marginRight">@dimen/dimen10</item>
    </style>
    <style name="Sub_View1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="Sub_View2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="Sub_View3">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="Sub_View4">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="Linked_TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size16</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/linked_text_color</item>
    </style>
    <style name="Normal_TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size16</item>
        <item name="android:layout_marginTop">@dimen/dimen10</item>
    </style>

    <style name="TextView_Title">
        <item name="android:textSize">@dimen/text_size25</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>
    <style name="Number_EditText">
        <item name="android:inputType">number</item>
        <item name="android:layout_marginTop">@dimen/dimen10</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size22</item>
    </style>
    <style name="Normal_EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size16</item>
    </style>
    <style name="OTP_EditText">
        <item name="android:inputType">number</item>
        <item name="android:layout_marginTop">@dimen/dimen10</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size22</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="PIN_EditText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size22</item>
        <item name="android:inputType">number</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLength">1</item>
        <item name="background">@color/white</item>

    </style>
</resources>