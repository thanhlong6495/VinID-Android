<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Sub_View2.Profile_Activity_Style"
    tools:context="HomeActivities.Profile">
        <TextView
            android:id="@+id/tv_profile_title"
            android:text="@string/profile"
            style="@style/TextView_Title"/>
        <ScrollView
            style="@style/Sub_View2.ScrollView_Style"
            android:layout_below="@id/tv_profile_title">
        <RelativeLayout
            style="@style/Sub_View4">
            <RelativeLayout
                android:id="@+id/account_name"
                style="@style/Sub_View4">
                <ImageView
                    android:id="@+id/profile_avatar"
                    style="@style/Profile_Avatar" />
                <TextView
                    android:id="@+id/tv_profile_information"
                    android:layout_toRightOf="@+id/profile_avatar"
                    android:layout_toEndOf="@+id/profile_avatar"
                    style="@style/TextView_Profile_Information"/>
                <ImageView
                    style="@style/Profile_Symbol"
                    android:src="@drawable/symbol"/>
            </RelativeLayout>

            <GridView
                android:layout_below="@+id/account_name"
                android:id="@+id/gridview_profile"
                style="@style/GridView_Profile">
            </GridView>
            <androidx.cardview.widget.CardView
                android:id="@+id/cardview_rating"
                android:layout_below="@+id/gridview_profile"
                style="@style/Sub_View4.CardView_Profile">
                <LinearLayout
                    android:orientation="vertical"
                    style="@style/Sub_View4">
                    <FrameLayout
                        style="@style/Sub_View4">
                        <ImageView
                            style="@style/Sub_View4.Profile_Footer"/>
                        <TextView
                            style="@style/Sub_View1.TextView_Profile_Footer" />
                    </FrameLayout>
                    <RatingBar
                        android:id="@+id/rating_bar"
                        style="@style/Sub_View1.Rating_Bar"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_below="@+id/cardview_rating"
                style="@style/Sub_View1.Version_Name"/>
        </RelativeLayout>
        </ScrollView>
    <FrameLayout
        android:layout_alignParentBottom="true"
        android:name="Fragments.RatingFragment"
        style="@style/Sub_View4">
        <com.google.android.material.bottomnavigation.BottomNavigationView
            style="@style/Sub_View4.Bottom_Navigation_Bar"
            android:id="@+id/bottom_navigation_bar">
        </com.google.android.material.bottomnavigation.BottomNavigationView>
        <LinearLayout
            android:id="@+id/fragment_rating"
            style="@style/Sub_View4"
            android:orientation="horizontal">
        </LinearLayout>
    </FrameLayout>
</RelativeLayout>