<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Date_Picker_Dialog_Fragment" parent="@android:style/Widget.Material.DatePicker">
        <item name="android:datePickerMode">spinner</item>
        <item name="android:calendarViewShown">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="Sub_View4.Button_Send">
        <item name="android:text">@string/send</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:backgroundTint">@color/button_background</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>
</resources>